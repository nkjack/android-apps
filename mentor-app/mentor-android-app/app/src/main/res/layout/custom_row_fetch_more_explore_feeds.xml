<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/fetchButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_arrow_down"
        android:background="@null"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <ProgressBar
        style="?android:attr/indeterminateProgressStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fetchMoreProgressBar"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/emergencyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="48dp"
        android:orientation="vertical"
        android:background="@color/emergencyBackgrounColor"
        android:visibility="visible">

        <ImageView
            android:background="@null"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/globe_emergency"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/emergencyTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center_horizontal"
            android:text="@string/emergency_explore_feeds"
            android:textColor="@color/emergencyTextColor"
            android:textSize="18sp" />

    </LinearLayout>



</android.support.v7.widget.CardView>