<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/intro_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_1"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="10">

    <!--<RelativeLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="7"-->
    <!--android:gravity="center">-->

    <!--<ImageView-->
    <!--android:id="@+id/exploreImage"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="48dp"-->
    <!--android:layout_marginLeft="24dp"-->
    <!--android:layout_marginRight="24dp"-->
    <!--android:src="@drawable/screenshot_explore_1" />-->
    <!--</RelativeLayout>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/exploreImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="48dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.greenfrvr.hashtagview.HashtagView
                        android:id="@+id/intro_tag_search"
                        style="@style/HashtagView"
                        app:rowGravity="center"
                        app:rowsQuantity="1"
                        app:selectionMode="true"
                        app:tagBackground="@drawable/tag_bg_3"
                        app:tagForeground="@drawable/flat_button_light"
                        app:tagPaddingBottom="@dimen/padding_vertical"
                        app:tagPaddingLeft="@dimen/tag_padding_horizontal"
                        app:tagPaddingRight="@dimen/tag_padding_horizontal"
                        app:tagPaddingTop="@dimen/padding_vertical"
                        app:tagTextColor="@color/white" />

                    <View
                        android:id="@+id/viewDiver"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/colorDivider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.greenfrvr.hashtagview.HashtagView
                            android:id="@+id/intro_tag_subject_group"
                            style="@style/HashtagView"
                            app:rowGravity="center"
                            app:tagBackground="@drawable/tag_bg_2"
                            app:tagForeground="@drawable/flat_button_light"
                            app:tagPaddingBottom="@dimen/padding_vertical"
                            app:tagPaddingLeft="@dimen/tag_padding_horizontal"
                            app:tagPaddingRight="@dimen/tag_padding_horizontal"
                            app:tagPaddingTop="@dimen/padding_vertical"
                            app:tagTextColor="@color/fragment_1_txt_color" />

                        <com.greenfrvr.hashtagview.HashtagView
                            android:id="@+id/intro_tag_school_group"
                            style="@style/HashtagView"
                            app:rowGravity="center"
                            app:tagBackground="@drawable/tag_bg_2"
                            app:tagForeground="@drawable/flat_button_light"
                            app:tagPaddingBottom="@dimen/padding_vertical"
                            app:tagPaddingLeft="@dimen/tag_padding_horizontal"
                            app:tagPaddingRight="@dimen/tag_padding_horizontal"
                            app:tagPaddingTop="@dimen/padding_vertical"
                            app:tagTextColor="@color/fragment_1_txt_color" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="EXPLORE"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="Searching For your right degree by filtering subjects and institutions"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>