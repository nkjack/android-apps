<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:minHeight="190dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <RelativeLayout
            android:id="@+id/headerNFPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/startTVNFHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="פורסם ב" />

            <TextView
                android:id="@+id/postedAtTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/startTVNFHeader"
                android:text="תואר לכלכה"
                android:textColor="@color/green_follow" />
        </RelativeLayout>

        <View
            android:id="@+id/dividerNewPost"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/headerNFPost"
            android:layout_marginTop="16dp"
            android:background="@color/colorTextSecondary2" />

        <RelativeLayout
            android:id="@+id/bodyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dividerNewPost">


            <TextView
                android:id="@+id/bodyContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:paddingBottom="24dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="מצוין"
                android:textColor="#222"
                android:textSize="16sp" />
            <!--android:maxLines="20"            -->

            <TextView
                android:id="@+id/timePostedTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/bodyContent"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:text="זמן"
                android:textColor="#222"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/symbolsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bodyLayout"
            android:gravity="center_vertical"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/commentCountCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="14"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/commentsImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/commentCountCard"
                    android:background="@null"
                    android:src="@mipmap/ic_comment_gray" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left">

                <ImageButton
                    android:id="@+id/minusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@null"
                    android:src="@mipmap/ic_arrow_down" />

                <TextView
                    android:id="@+id/scorePost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/minusButton"
                    android:text="14"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/plusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/scorePost"
                    android:background="@null"
                    android:src="@mipmap/ic_arrow_up" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rateSymbolLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/scoreRateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="5"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/rateImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/scoreRateText"
                    android:background="@null"
                    android:src="@mipmap/ic_star_amber" />


            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/dividerNFPostBottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/symbolsLayout"
            android:layout_marginTop="4dp"
            android:background="@color/colorTextSecondary2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dividerNFPostBottom"
            android:gravity="center_vertical">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/profileImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_person"
                app:border="true"
                app:border_color="#EEEEEE"
                app:border_width="4dp"
                app:shadow="true" />


            <RelativeLayout
                android:id="@+id/newPostLayout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/profileImage"
                android:layout_toRightOf="@+id/addToFavoritesButton"
                android:clickable="true"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/textViewProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="4dp"
                    android:text="אורח"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="14sp" />

            </RelativeLayout>

            <ImageButton
                android:layout_centerVertical="true"
                android:id="@+id/addToFavoritesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="14dp"
                android:background="@null"
                android:src="@drawable/ic_content_add" />

        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>